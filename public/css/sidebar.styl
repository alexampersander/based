::selection
    background-color #b5e2e7

.sidebar
    position absolute
    height 100%
    width 300px
    margin-left -300px
    background-color #04BFBF
    color white
    h2
        font-family 'Lato', helvetica, sans-serif
        font-weight 300
        text-align center
        color #027373
        margin 30px 0 30px 0
        font-size 2.2em
    ul
        padding 0
        margin 0
        li
            a
                display block
                padding 1em 1em 1em 1.2em
                outline none
                box-shadow inset 0 -1px rgba(0,0,0,0.2)
                color #f3efe0
                text-shadow 0 0 1px rgba(255,255,255,0.1)
                letter-spacing 1px
                -webkit-transition background 0.3s, box-shadow 0.3s
                transition background 0.3s, box-shadow 0.3s
                height 53px
                &:hover
                    background rgba(0,0,0,0.2)
                    box-shadow inset 0 -1px rgba(0,0,0,0)
                    color white
            &:first-child
                a
                    box-shadow inset 0 -1px rgba(0,0,0,0.2), inset 0 1px rgba(0,0,0,0.2)

#sidehead
    &:before
        position absolute
        content "\f06b"
        font-family FontAwesome
        font-style normal
        font-weight normal
        font-size 1.5em
        margin-left -55px
        margin-top -11px

body
    overflow-x hidden
    font-family 'Lato', helvetica, sans-serif

.content
    position relative

#menu
    ul
        list-style none

#home, #list, #reasons, #contact, #signup, #login
    text-decoration none
    color inherit

.push
    -webkit-transform translate3d(300px, 0, 0)
    -moz-transform translate3d(300px, 0, 0)
    transform translate3d(300px, 0, 0)
    -webkit-transition -webkit-transform 0.5s
    -moz-transition -webkit-transform 0.5s
    transition transform 0.5s

.pushfast
    -webkit-transform translate3d(300px, 0, 0)
    -moz-transform translate3d(300px, 0, 0)
    transform translate3d(300px, 0, 0)
    -webkit-transition -webkit-transform  0.0001s
    -moz-transition -webkit-transform  0.0001s
    transition transform 0.0001s

.pull
    -webkit-transform translate3d(0, 0, 0)
    -moz-transform translate3d(0, 0, 0)
    transform translate3d(0, 0, 0)
    -webkit-transition -webkit-transform 0.5s
    -moz-transition -webkit-transform 0.5s
    transition transform 0.5s

.pullslow
    -webkit-transform translate3d(0, 0, 0)
    -moz-transform translate3d(0, 0, 0)
    transform translate3d(0, 0, 0)
    -webkit-transition -webkit-transform 200s
    -moz-transition -webkit-transform 200s
    transition transform 200s

#expand
    position fixed
    margin 5px 0 0 10px
    text-decoration none
    color #04BFBF
    transition opacity .25s ease-in-out
    -webkit-transition opacity .25s ease-in-out
    -moz-transition opacity .25s ease-in-out
    outline none

.fadeOut
    opacity 0

.coverUp
    z-index -50

#cover
    position absolute
    width 50px
    height 50px
    background-color inherit
    z-index -3

